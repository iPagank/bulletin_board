@model bulletin_board.ViewModels.RegisterViewModel

<h2>Регистрация</h2>
<div class="alert alert-danger" role="alert" asp-validation-summary="ModelOnly"></div>

<form method="post" asp-controller="Account" asp-action="Register">

    <div class="form-group">
        <label asp-for="Email">Email address</label>
        <input type="email" class="form-control" asp-for="Email" aria-describedby="emailHelp">
        <span asp-validation-for="Email" class="form-text text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Name"></label>
        <input type="text" class="form-control" asp-for="Name">
        <span asp-validation-for="Name" class="form-text text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Phone"></label>
        <input type="tel" class="form-control" asp-for="Phone">
        <span asp-validation-for="Phone" class="form-text text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="City"></label>
        <input type="text" class="form-control" asp-for="City">
        <span asp-validation-for="Phone" class="form-text text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Password"></label>
        <input type="password" class="form-control" asp-for="Password">
        <span asp-validation-for="Password" class="form-text text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="ConfirmPass"></label>
        <input type="password" class="form-control" asp-for="ConfirmPass">
        <span asp-validation-for="ConfirmPass" class="form-text text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Submit</button>
</form>