@model bulletin_board.Models.Product

<div class="container mt-3">
    <div class="row">
        <div class="col-4">
            <a class="text-primary mb-4" asp-action="Index" asp-controller="Home">Назад</a>
            <img src="@Url.Content(Model.Path)" class="card-img-top" alt="img">
            <h4 class="m-4">Цена: @Model.Price $</h4>
            <ul class="list-group list-group-flush">
                <li class="list-group-item">Имя продавца: <a asp-action="Profile" asp-controller="Home" asp-route-id="@Model.User.Id">@Model.User.Name</a></li>
                <li class="list-group-item">Email Адрес: <a href="mailto:@Model.User.Email">@Model.User.Email</a></li>
                <li class="list-group-item">Номер телефона: <a href="tel:@Model.User.PhoneNumber">@Model.User.PhoneNumber</a></li>
                <li class="list-group-item">Состояние: @(Model.State ? "Новое" : "Б/У")</li>
                <li class="list-group-item">Город: @Model.User.City</li>
            </ul>

            <a href="#" class=" mt-4 btn btn-primary btn-block btn-lg active" role="button" aria-pressed="true">Buy</a>

        </div>
        <div class="col-8">
            <h1>@Model.Name</h1>
            <br>
            <p>@Model.Description</p>

        </div>
    </div>
</div>
