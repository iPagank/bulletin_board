@{
    ViewData["Title"] = "Home Page";
}

@model IEnumerable<Product>

    <div class="container-fluid mt-3">
        <div class="row row-cols-2 row-cols-md-2">
            @foreach (var item in Model)
            {
            <div class="col mb-4">
                <div class="card">
                    <img src="@Url.Content(item.Path)" class="card-img-top" alt="img">
                    <div class="card-body">
                        <h5 class="card-title">@item.Name</h5>
                        <p class="card-text">@item.Description</p>
                        <a asp-controller="Home" asp-action="Product" asp-route-id="@item.Id" class="btn btn-primary">Смотреть</a>
                    </div>
                </div>
            </div>
            }
        </div>
    </div>
        